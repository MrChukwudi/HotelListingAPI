{
//Overriding the default Microsoft Logging Config:
/*"Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  */
 "Serilog": {
  "MinimumLevel": {
    "Default": "Information",
    "Override": { //Tells serilog to override the default microsoft loging configuration
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "WriteTo": [ //Using this arraye of objects to hold all the places you want to write your log messages to:
    {
      "Name": "File",
      "Args": {
        "path": "./logs/log-.txt",
        "rollingInterval": "Day"
      }
    },
    {
      "Name": "Seq",
      "Args": {
        "serverUrl": "http://localhost:5341"
      }
    }
  ]

    },
"AllowedHosts": "*" 
  }
